<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/content_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_16dp"
        android:visibility="visible">
        <TextView
            android:id="@+id/nama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:text="Biaya Bahan Bakar Minyak (BBM)"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/biaya"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/veryDarkGrey"
            android:background="@drawable/rounded_rect_grey_darker"
            android:padding="@dimen/dimen_8dp"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:inputType="number"
            android:hint="@string/jumlah_biaya"
            tools:ignore="Autofill" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:id="@+id/btn_upload"
            android:src="@drawable/ic_upload"
            tools:ignore="ContentDescription,NestedWeights"
            android:layout_gravity="end"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:id="@+id/btn_catatan"
            android:src="@drawable/ic_catatan"
            tools:ignore="ContentDescription,NestedWeights"
            android:layout_gravity="end"/>
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:background="@color/loginBackground"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginStart="@dimen/dimen_16dp" />
</LinearLayout>