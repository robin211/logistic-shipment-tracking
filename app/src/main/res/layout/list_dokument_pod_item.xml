<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_rect_white"
    android:padding="@dimen/dimen_16dp"
    android:layout_marginBottom="@dimen/dimen_16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_no_kargo"
        android:textStyle="bold"
        tools:text="KRGO12347468"
        android:maxLines="1"
        android:textSize="@dimen/txt_size_16sp"
        android:layout_toStartOf="@id/tag_pod"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_date"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txt_no_kargo"
        tools:text="28 February 2021"
        android:layout_marginTop="@dimen/dimen_8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_time"
        android:layout_toEndOf="@id/txt_date"
        android:layout_toStartOf="@id/tag_pod"
        android:layout_below="@id/txt_no_kargo"
        tools:text="15:00"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginStart="@dimen/dimen_8dp"/>
    <TextView
        android:layout_width="160dp"
        android:layout_height="@dimen/dimen_36dp"
        android:id="@+id/tag_pod"
        android:gravity="center"
        android:textSize="12sp"
        android:background="@drawable/ic_dokumenlengkap"
        android:textColor="@color/white"
        tools:text="@string/dokumen_lengkap"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>