<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/loginFragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/authentication_layout_height"
        android:background="@drawable/login_form_bg"
        android:orientation="vertical"
        android:padding="@dimen/dimen_0dp"
        tools:context=".ui.fragments.LoginFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:paddingHorizontal="@dimen/dimen_20dp"
            android:background="@color/transparent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/driver"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="@dimen/txt_size_20sp" />
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:text="@string/login"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_25sp" />
            <EditText
                android:id="@+id/loginEmailET"
                android:backgroundTint="@color/light_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_1dp"
                android:autofillHints=""
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/dimen_16dp"
                android:textAlignment="textStart"
                android:textColorHint="@color/light_grey"
                android:textCursorDrawable="@drawable/white_cursor"
                android:textSize="@dimen/txt_size_16sp"
                android:fontFamily="@font/raleway_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loginEmailET">
                <EditText
                    android:id="@+id/loginPasswordET"
                    android:backgroundTint="@color/light_grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/dimen_36dp"
                    android:autofillHints=""
                    android:hint="@string/password"
                    android:imeOptions="actionSend"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/dimen_16dp"
                    android:textAlignment="textStart"
                    android:textColorHint="@color/light_grey"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:textSize="@dimen/txt_size_16sp"
                    android:fontFamily="@font/raleway_bold" />
                <ImageView
                    android:id="@+id/view_password"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/hide"
                    tools:ignore="ContentDescription"
                    android:clickable="true"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:focusable="true"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/hide_password"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/view"
                    tools:ignore="ContentDescription"
                    android:clickable="true"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:focusable="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:paddingBottom="@dimen/dimen_20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fcmtoken"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:background="@color/transparent"
                    android:textSize="12sp"
                    android:visibility="gone"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/deviceid"
                    android:layout_below="@id/fcmtoken"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:background="@color/transparent"
                    android:textSize="12sp"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/loginBtn"
                    android:layout_above="@id/navigateActivateFragmentBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_primary"
                    android:fontFamily="@font/raleway_bold"
                    android:text="@string/login"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/navigateActivateFragmentBtn"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@drawable/rounded_button_secondary"
                    android:fontFamily="@font/raleway_bold"
                    android:text="@string/activate_account"
                    android:textAllCaps="false"
                    android:textColor="@color/newDarkBlue" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
